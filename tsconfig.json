{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "paths": {
      "@components/*": ["./src/app/shared/components/*"],
      "@facades/*": ["./src/app/shared/facades/*"],
      "@models/*": ["./src/app/shared/models/*"],
      "@modals/*": ["./src/app/shared/modals/*"],
      "@resolvers/*": ["./src/app/shared/resolvers/*"],
      "@services/*": ["./src/app/shared/services/*"],
      "@shared/*": ["./src/app/shared/*"],
      "@state/*": ["./src/app/state/*"],
    },
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
  }
}
